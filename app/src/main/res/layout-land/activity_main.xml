<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.albert.albertpset1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build Mr. Potatohead"
        android:id="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arms"
        android:id="@+id/arms"
        android:layout_above="@+id/shoes"
        android:layout_alignStart="@+id/ears"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes"
        android:id="@+id/shoes"
        android:layout_above="@+id/ears"
        android:layout_alignStart="@+id/ears"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ears"
        android:id="@+id/ears"
        android:layout_above="@+id/brows"
        android:layout_alignStart="@+id/brows"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brows"
        android:id="@+id/brows"
        android:layout_above="@+id/eyes"
        android:layout_alignStart="@+id/eyes"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyes"
        android:id="@+id/eyes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hat"
        android:id="@+id/hat"
        android:layout_alignTop="@+id/arms"
        android:layout_alignStart="@+id/mustache"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glasses"
        android:id="@+id/glass"
        android:layout_below="@+id/hat"
        android:layout_alignStart="@+id/hat"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mouth"
        android:id="@+id/mouth"
        android:layout_below="@+id/glass"
        android:layout_alignStart="@+id/glass"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mustache"
        android:id="@+id/mustache"
        android:layout_below="@+id/mouth"
        android:layout_alignParentEnd="true"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nose"
        android:id="@+id/nose"
        android:layout_below="@+id/brows"
        android:layout_alignStart="@+id/mustache"
        android:onClick="onCheckboxClicked"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/body_image"
        android:src="@drawable/body"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eye_image"
        android:src="@drawable/eyes"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nose_image"
        android:src="@drawable/nose"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arms_image"
        android:src="@drawable/arms"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mouth_image"
        android:src="@drawable/mouth"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoes_image"
        android:src="@drawable/shoes"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ears_image"
        android:src="@drawable/ears"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hat_image"
        android:src="@drawable/hat"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mustache_image"
        android:src="@drawable/mustache"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glass_image"
        android:src="@drawable/glasses"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brows_image"
        android:src="@drawable/eyebrows"
        android:visibility="invisible"
        android:layout_above="@+id/arms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"/>
</RelativeLayout>
